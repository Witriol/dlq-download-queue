<?xml version="1.0" encoding="utf-8"?>
<Container version="2">
  <Name>My Downloader Queue</Name>
  <Repository>@IMAGE@</Repository>
  <Registry></Registry>
  <Network>bridge</Network>
  <Privileged>false</Privileged>
  <Support>https://github.com/Witriol/my-downloader/issues</Support>
  <Project>https://github.com/Witriol/my-downloader</Project>
  <Overview>Headless download-queue daemon + CLI (aria2-backed). Default: anonymous mode; login-required/quota/captcha become backoff states. CLI via docker exec. Use /data/tvshows or /data/movies as --out targets. HTTP API is bound to localhost.</Overview>
  <Category>Downloaders:Tools</Category>
  <WebUI/>
  <TemplateURL/>
  <Icon/>
  <ExtraParams/>
  <PostArgs/>

  <Config Name="TV Shows" Target="/data/tvshows" Default="@TV_SHOWS_PATH@" Mode="rw" Description="TV shows output directory" Type="Path" Display="always" Required="true" Mask="false"/>
  <Config Name="Movies" Target="/data/movies" Default="@MOVIES_PATH@" Mode="rw" Description="Movies output directory" Type="Path" Display="always" Required="true" Mask="false"/>
  <Config Name="State" Target="/state" Default="@STATE_PATH@" Mode="rw" Description="SQLite DB + logs + runtime" Type="Path" Display="always" Required="true" Mask="false"/>

  <Config Name="PUID" Target="PUID" Default="@PUID@" Mode="" Description="Run as user id" Type="Variable" Display="advanced" Required="false" Mask="false">@PUID@</Config>
  <Config Name="PGID" Target="PGID" Default="@PGID@" Mode="" Description="Run as group id" Type="Variable" Display="advanced" Required="false" Mask="false">@PGID@</Config>
  <Config Name="TZ" Target="TZ" Default="@TZ@" Mode="" Description="Timezone" Type="Variable" Display="advanced" Required="false" Mask="false">@TZ@</Config>

  <Config Name="HTTP API (internal)" Target="DLQ_HTTP_ADDR" Default="@HTTP_ADDR@" Mode="" Description="Bind address for internal API (not exposed)" Type="Variable" Display="advanced" Required="false" Mask="false"/>

  <Config Name="ARIA2 Secret" Target="ARIA2_SECRET" Default="" Mode="" Description="RPC secret for aria2" Type="Variable" Display="advanced" Required="false" Mask="true"/>
  <Config Name="DLQ Concurrency" Target="DLQ_CONCURRENCY" Default="@DLQ_CONCURRENCY@" Mode="" Description="Number of concurrent downloads" Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="DLQ Out Dir Presets" Target="DLQ_OUT_DIR_PRESETS" Default="@DLQ_OUT_DIR_PRESETS@" Mode="" Description="Comma-separated out_dir presets for the UI" Type="Variable" Display="advanced" Required="false" Mask="false"/>
</Container>
